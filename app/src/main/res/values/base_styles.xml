<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/app_main_color</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/app_main_dark_color</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/app_main_bg_color</item>
        <!--Actionbar text color-->
        <item name="android:textColorPrimary">@color/app_main_txt_color</item>
        <!-- AlertDialog -->
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
        <item name="android:actionMenuTextColor">@color/app_white</item>
        <item name="actionMenuTextColor">@color/app_white</item>
        <item name="android:windowAnimationStyle">@style/ActivitySlidingAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@color/app_transparent</item>
        <item name="android:background">@color/app_transparent</item>
        <item name="background">@color/app_transparent</item>
        <item name="android:colorBackgroundCacheHint">@color/app_transparent</item>
        <item name="android:windowContentOverlay">@color/app_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@color/app_transparent</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ListPopupWindowStyle" parent="@android:style/Widget.DeviceDefault.Light.ListPopupWindow">
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- style for the action bar backgrounds -->
    <style name="ActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@color/app_main_color</item>
        <item name="android:displayOptions">disableHome|showCustom</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:showDividers">none</item>
        <item name="android:itemPadding">0dip</item>
        <item name="android:drawablePadding">0dip</item>
        <item name="android:height">@dimen/base_actionbar_height</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- style for the action button -->
    <style name="ActionButtonStyle" parent="@android:style/Widget.DeviceDefault.ActionButton">
        <item name="android:scaleType">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:minHeight">@dimen/base_actionbar_height</item>
    </style>

    <!--默认为透明的对话框 不是float的-->
    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--float 有背景的, float的，如果使用了setlayout，那么如果有输入框会弹不出来-->
    <style name="DialogTheme.Float">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogTheme.Float.Dim">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--float 透明背景的，如果使用了setlayout，那么如果有输入框会弹不出来-->
    <style name="DialogTheme.Float.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/activity_open_enter</item>
        <item name="@android:windowExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="ActivitySlidingAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="ActivityFadeAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>
</resources>
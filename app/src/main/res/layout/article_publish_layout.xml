<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/normal_margin">

    <EditText
        android:id="@+id/txtArticleTitle"
        style="@style/BaseTextStyle.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/publish_article_title_hint"
        android:minHeight="@dimen/title_height" />

    <EditText
        android:id="@+id/txtArticleContent"
        style="@style/BaseTextStyle.Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/publish_article_content_hint" />

</LinearLayout>